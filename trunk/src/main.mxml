<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:sf="http://www.spicefactory.org/parsley"
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600"
			   frameRate="60" 
			   addedToStage="application1_addedToStageHandler(event)"
			   >
	
	<fx:Declarations>
		<sf:ContextBuilder config="MainConfig"/>
	</fx:Declarations>
	 
	<fx:Script>
		<![CDATA[
			import controlers.core.World;
			import controlers.core.display.IScreenManager;
			import controlers.core.display.impl.BaseLayer;
			import controlers.core.display.impl.BaseScreen;
			import controlers.core.display.impl.BaseScreenManager;
			import controlers.core.display.impl.ImageLayer;
			import controlers.core.input.impl.InputKey;
			import controlers.core.log.Logger;
			import controlers.core.log.impl.TextAreaWriter;
			import controlers.core.resource.*;
			import controlers.core.resource.event.ResourceEvent;
			import controlers.core.resource.impl.*;
			
			import flash.display.Sprite;
			
			import mx.core.UIComponent;
			
			[Inject]
			public  var world :World;
			
			protected function application1_addedToStageHandler(event:Event):void
			{
				dispatchEvent(new Event('configureIOC', true));
				
				// flex 中采用UIComponent 替代 Sprite
				var area : Sprite = new Sprite();
				var ui:UIComponent=new UIComponent(); 
				ui.addChild(area);
				this.addElement( ui );
				
				Logger.init( new TextAreaWriter( this.logarea ) );
				
				world.init( area );
				
				var sm :IScreenManager = world.screenMgr;
				
				var screen:BaseScreen = new BaseScreen();
				var second:BaseScreen = new BaseScreen();
				var layer1:ImageLayer = new ImageLayer();
				var layer2:ImageLayer = new ImageLayer();
				layer1.dataSource = new ImageResource( "aa", "http://ww3.sinaimg.cn/bmiddle/61e89b74jw6dewr2ch6kqj.jpg", true );
				
				screen.push( layer1 );
				screen.push(layer2 );
				
				sm.add( "first", screen ); 
				sm.add( "second", second );
				sm.goto("first");
				
				layer2.dataSource = new ImageResource( "bb", "http://ww3.sinaimg.cn/bmiddle/4d34c1fcjw6dezst13sw5j.jpg", true );
				
				world.inputMgr.on( InputKey.ANYKEY, function( event:Event ) :void {
					//sm.goto( "second" );
					layer2.hide();
				} );
				
			}

		]]>
	</fx:Script>
	
	<s:TextArea enabled="true" editable="false" width="600" height="400" id="logarea" bottom="0" right="0" />
	
</s:Application>
