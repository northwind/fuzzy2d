<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:sf="http://www.spicefactory.org/parsley"
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600"
			   frameRate="60" 
			   addedToStage="application1_addedToStageHandler(event)"
			   >
	
	<fx:Declarations>
		<sf:ContextBuilder config="MainConfig"/>
	</fx:Declarations>
	 
	<fx:Script>
		<![CDATA[
			import controlers.core.World;
			import controlers.core.display.IScreenManager;
			import controlers.core.display.impl.BaseLayer;
			import controlers.core.display.impl.BaseScreen;
			import controlers.core.display.impl.BaseScreenManager;
			import controlers.core.display.impl.ImageLayer;
			import controlers.core.input.impl.InputKey;
			import controlers.core.log.Logger;
			import controlers.core.log.impl.TextAreaWriter;
			import controlers.core.resource.*;
			import controlers.core.resource.event.ResourceEvent;
			import controlers.core.resource.impl.*;
			import controlers.core.sound.ISounder;
			
			import flash.display.Sprite;
			
			import mx.core.UIComponent;
			
//			[Inject]
			public  var world :World;
			
			protected function application1_addedToStageHandler(event:Event):void
			{
				dispatchEvent(new Event('configureIOC', true));
				
				// flex 中采用UIComponent 替代 Sprite
				var area : Sprite = new Sprite();
				var ui:UIComponent=new UIComponent(); 
				ui.addChild(area);
				this.addElementAt( ui, 0 );
				
				Logger.init( new TextAreaWriter( this.logarea ) );
				
				world = new World();
				world.init( area );
				
				var sm :IScreenManager = world.screenMgr;
				
				var first:BaseScreen = new BaseScreen();
				var second:BaseScreen = new BaseScreen();
				var third:BaseScreen = new BaseScreen();
				var fourth:BaseScreen = new BaseScreen();
				
				var bg1:ImageLayer = new ImageLayer();
				bg1.dataSource = new ImageResource( "a", "http://slgengine.sinaapp.com/test/friends.png", true );
				first.push( bg1 ); 
				
				var bg2:ImageLayer = new ImageLayer();
				bg2.dataSource = new ImageResource( "b", "http://slgengine.sinaapp.com/test/mission.png", true );
				second.push( bg2 ); 
				
				var bg3:ImageLayer = new ImageLayer();
				bg3.dataSource = new ImageResource( "c", "http://slgengine.sinaapp.com/test/ready.png", true );
				third.push( bg3 ); 
				
				var bg4:ImageLayer = new ImageLayer();
				bg4.dataSource = new ImageResource( "d", "http://slgengine.sinaapp.com/test/battle.png", true );
				fourth.push( bg4 ); 
				
				sm.add( "friends", first ); 
				sm.add( "mission", second );
				sm.add( "ready", third );
				sm.add( "battle", fourth );
				
				sm.goto("friends");
				
				var i:uint = 1;
				var screens:Array = [ "friends",  "mission", "ready", "battle" ];
				
				world.inputMgr.on( InputKey.ANYKEY, function( event:Event ) :void {
					if ( i == screens.length )
						i = 0;
					
					sm.goto( screens[ i++ ] );
					
				} );
				
				world.resourceMgr.add( "lin", "http://slgengine.sinaapp.com/test/lin.mp3", true );
				world.resourceMgr.load( "lin", null, function( event:ResourceEvent ) : void {
					Logger.debug( "lin sound loaded." );
					var sounder:ISounder = world.soundMgr.create( "lin", event.resource );
					
					world.soundMgr.loops( "lin", 2 );
					//world.soundMgr.play( "lin" );
					
				} );
				
				var off:Boolean = true;
				world.inputMgr.on( InputKey.RIGHT , function( event:Event ) :void {
					world.soundMgr.mute( "lin", off );
					off = !off;
				} );
				
				var stoped:Boolean = false;
				world.inputMgr.on( InputKey.SPACE , function( event:Event ) :void {
					if ( stoped ){
						stoped = false;
						world.soundMgr.play( "lin" );
					}else{
						stoped = true;
						world.soundMgr.stop( "lin" );
					}
				} );
				
				world.inputMgr.on( InputKey.DOWN , function( event:Event ) :void {
					world.soundMgr.down( "lin", 0.1 );
				} );
				
				world.inputMgr.on( InputKey.UP , function( event:Event ) :void {
					world.soundMgr.up( "lin", 0.1 );
				} );
				
				world.inputMgr.on( InputKey.LEFT , function( event:Event ) :void {
					world.soundMgr.replay( "lin" );
				} );
			}

		]]>
	</fx:Script>
	
	<s:TextArea enabled="true" editable="false" width="600" height="400" id="logarea" bottom="0" right="0" />
	
</s:Application>
